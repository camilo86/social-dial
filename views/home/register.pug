extends ../template.pug

block header
  link(rel='stylesheet', href='static/home/register.css')
  title Social Dial - Create account

block body
  form.form-register(method="POST")
    center
      a(href='/')
        img.mb-4(src='static/call-answer.svg', alt='Phone', width='72', height='72')
      h1.h3.mb-3.font-weight-normal Lets create your account

    label.sr-only(for='inputName') Name
    input#inputName.form-control.start-group(type='text', name='name', placeholder='Name', required='', autofocus='')
    label.sr-only(for='inputPhone') Phone
    input#inputPhone.form-control.center-group(type='phone', name='phone', placeholder='Phone', required='', autofocus='')
    label.sr-only(for='inputEmail') Email
    input#inputEmail.form-control.end-group(type='email', name='email', placeholder='Email', required='', autofocus='')

    hr

    label.sr-only(for='inputPassword') Password
    input#inputPassword.form-control.start-group(type='password', name='password', placeholder='Password', required='', autofocus='')
    label.sr-only(for='inputRepeatPassword') Repeat Password
    input#inputRepeatPassword.form-control.end-group(type='password', name='repeat-password', placeholder='Repeat password', required='', autofocus='')

    br

    button.btn.btn-lg.btn-primary.btn-block(type='submit') Create account
