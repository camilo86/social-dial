extends ../template.pug

block header
  link(rel='stylesheet', href='static/home/login.css')
  title Social Dial - Login to your account

block body
  form.form-signin(method="POST")
    center
      a(href='/')
        img.mb-4(src='static/call-answer.svg', alt='Phone', width='72', height='72')
      h1.h3.mb-3.font-weight-normal Please sign in

    include ../flash-messages.pug

    label.sr-only(for='inputEmail') Email address
    input#inputEmail.form-control(type='email', name='email', placeholder='Email address', required='', autofocus='')
    label.sr-only(for='inputPassword') Password
    input#inputPassword.form-control(type='password', name='password', placeholder='Password', required='')
    .checkbox.mb-3
      label
        input(type='checkbox', value='remember-me')
        |  Remember me
    button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
